@model ClubAdministration.Models.system.templates

@{
    ViewBag.Title = "حذف" + " " + Model.title;
}

@widgets.common.ribbon.Show_Ribbon(Url, "templates.delete.default", "آيا از حذف" + (" " + Model.title) + " مطمئن هستيد؟", rootParams: new { id = Model.ID })
@using (Html.BeginForm("Delete", "templates", FormMethod.Post, new { @name = "templatesform" }))
{
    @Html.AntiForgeryToken()
    <div class="mt-2 rounded-bottom shadow-sm mb-4">
        <h3 class="text-center rounded-top p-3 border bg-light m-0">اطلاعات پايه</h3>
        <div class="rounded-bottom px-2 py-2 border border-top-0 ">
            <table class="table table-striped table-responsive-sm">
                <tr>
                    <td>
                        كد شناسايي
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.ID)
                    </td>
                </tr>
                <tr>
                    <td>
                        قالب
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.title)
                    </td>
                </tr>
                <tr>
                    <td>
                        آدرس
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.address)
                    </td>
                </tr>
                <tr>
                    <td>
                        پيش‌فرض؟
                    </td>
                    <td>
                        @widgets.drill_periodic.Show_Drill_Periodic(Model.isdefault)
                    </td>
                </tr>
                <tr>
                    <td>
                        بخش مديريت
                    </td>
                    <td>
                        @widgets.drill_periodic.Show_Drill_Periodic(Model.admin)
                    </td>
                </tr>
            </table>
        </div>
    </div>
}