@model ClubAdministration.Models.training_patterns
@{
    ViewBag.Title = " جزئيات برنامه تمريني" + " " + Model.pattern.title;
}

@widgets.common.ribbon.Show_Ribbon(Url, "training.plans.details", "جزئيات برنامه تمريني " + " " + Model.pattern.title, new { id = Model.ID }, new { id = Model.training_id })

<div class="mt-2 rounded-bottom shadow-sm mb-4">
    <h3 class="text-center rounded-top p-3 border bg-light m-0">اطلاعات پايه</h3>
    <div class="rounded-bottom px-2 py-2 border border-top-0 ">
        <table class="table table-striped table-responsive-sm">
            <tr>
                <td>
                    كد شناسايي
                </td>
                <td>
                    @Html.DisplayFor(model => model.ID)
                </td>
            </tr>
            <tr>
                <td>
                    برنامه تمريني
                </td>
                <td>
                    @Html.ActionLink(Model.pattern.title,"Detailspattern",new { controller = "drills" , id = Model.pattern_id })
                </td>
            </tr>
            <tr>
                <td>
                    ترتيب اجرا
                </td>
                <td>
                    @Html.DisplayFor(model => model.orders)
                </td>
            </tr>
            <tr>
                <td>
                    تاریخ شروع برنامه تمريني
                </td>
                <td>
                    @Model.start_date
                </td>
            </tr>
            <tr>
                <td>
                    تاریخ خاتمه برنامه تمريني
                </td>
                <td>
                    @Model.end_date
                </td>
            </tr>
        </table>
    </div>
</div>


