@model ClubAdministration.Models.metrics

@{
    ViewBag.Title = "حذف" + " " + Model.name;
}

@widgets.common.ribbon.Show_Ribbon(Url, "metrics.default.delete", "آيا از حذف" + (" " + Model.name) + " مطمئن هستيد؟", rootParams: new { id = Model.ID })
@using (Html.BeginForm("DeleteMetric", "metrics", FormMethod.Post, new { @name = "metricform" }))
{
    @Html.AntiForgeryToken()
    <div class="mt-2 rounded-bottom shadow-sm mb-4">
        <h3 class="text-center rounded-top p-3 border bg-light m-0">اطلاعات پايه</h3>
        <div class="rounded-bottom px-2 py-2 border border-top-0 ">
            <table class="table table-striped table-responsive-sm">
                <tr>
                    <td>
                        كد شناسايي
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.ID)
                    </td>
                </tr>
                <tr>
                    <td>
                        عنوان
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.name)
                    </td>
                </tr>
                <tr>
                    <td>
                        شرح
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.tips)
                    </td>
                </tr>
                <tr>
                    <td>
                        محدوده پاييني
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.lowerBound)
                    </td>
                </tr>
                <tr>
                    <td>
                        محدوده بالايي
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.upperBound)
                    </td>
                </tr>
            </table>
        </div>
    </div>
}