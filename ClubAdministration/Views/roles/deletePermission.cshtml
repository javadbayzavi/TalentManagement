@model ClubAdministration.Models.system.role_permissions

@{
    ViewBag.Title = "حذف" + " " + Model.permission.title;
}

@widgets.common.ribbon.Show_Ribbon(Url, "roles.permissions.delete", "آيا از حذف" + (" " + Model.permission.title) + " مطمئن هستيد؟", new { id = Model.ID },new { id = Model.role.ID })
@using (Html.BeginForm("deletePermission", "roles", FormMethod.Post, new { @name = "rolesform" }))
{
    @Html.AntiForgeryToken()
    <div class="mt-2 rounded-bottom shadow-sm mb-4">
        <h3 class="text-center rounded-top p-3 border bg-light m-0">اطلاعات پايه</h3>
        <div class="rounded-bottom px-2 py-2 border border-top-0 ">
            <table class="table table-striped table-responsive-sm">
                <tr>
                    <td>
                        كد شناسايي
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.ID)
                    </td>
                </tr>
                <tr>
                    <td>
                        عنوان دسترسي
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.permission.title)
                    </td>
                </tr>
                <tr>
                    <td>
                        دستور
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.permission.command)
                    </td>
                </tr>
            </table>
        </div>
    </div>
}