
<div id="calender"></div>

<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"><span id="eventTitle"></span></h4>
            </div>
            <div class="modal-body">
                <p id="pDetails"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>

<link href="~/Content/calendar/fullcalendar.css" rel="stylesheet" />

@*@section Scripts{*@
<script src="~/Scripts/calendar/moment.min.js"></script>
<script src="~/Scripts/calendar/fullcalendar.js"></script>
<script src="~/Scripts/calendar/locales-all.min.js"></script>

<script>
        $(document).ready(function () {
            var events = [];
            $.ajax({
                type: "GET",
                url: "/@ViewBag.StoreAddess",
                success: function (data) {
                    $.each(data, function (i, v) {
                        events.push({
                            title: v.drill_title,
                            description: v.Description,
                            start: moment(v.drill_date),
                            end: v.End != null ? moment(v.drill_date) : null,
                            color: v.ThemeColor,
                            allDay : v.IsFullDay
                        });
                    })

                    GenerateCalender(events);
                },
                error: function (error) {
                    alert('failed');
                }
            })

            function GenerateCalender(events) {
                $('#calender').fullCalendar('destroy');
                $('#calender').fullCalendar({
                    locale: 'fa',
                    isRTL: true,
                    firstDay : 6,
                    contentHeight: 500,
                    defaultDate: new Date(),
                    timeZone: 'UTC',
                    timeFormat: 'h(:mm)a',
                    header: {
                        left: 'next,prev,today',
                        center: 'title',
                        right: 'month,basicWeek,basicDay,agenda,list'
                    },
                    monthNames : ['ژانويه', 'فوريه', 'مارچ', 'آپريل', 'مي', 'جون', 'جولاي',
                        'آگوست', 'سپتامبر', 'اكتبر', 'نوامبر', 'دسامبر'],
                    dayNames : ['يك‌شنبه', 'دوشنبه', 'سه‌شنبه', 'چهارشنبه',
                        'پنج‌شنبه', 'جمعه', 'شنبه'],
                    dayNamesShort : ['يك‌شنبه', 'دوشنبه', 'سه‌شنبه', 'چهارشنبه',
                        'پنج‌شنبه', 'جمعه', 'شنبه'],
                    button: {
                        month: 'ماه',
                        list: 'ليست'
                    },
                    buttonText:
                    {
                      today:    'امروز',
                      month:    'ماه',
                      week:     'هفته',
                      day:      'روز',
                      list:     'ليست',
                      agenda:   'ساعات'
                    },
                    eventLimit: true,
                    eventColor: '#378006',
                    events: events,
                    eventClick: function (calEvent, jsEvent, view) {
                        $('#myModal #eventTitle').text(calEvent.title);
                        var $description = $('<div/>');
                        $description.append($('<p/>').html('<b>Start:</b>' + calEvent.start.format("DD-MMM-YYYY HH:mm a")));
                        if (calEvent.end != null) {
                            $description.append($('<p/>').html('<b>End:</b>' + calEvent.end.format("DD-MMM-YYYY HH:mm a")));
                        }
                        $description.append($('<p/>').html('<b>Description:</b>' + calEvent.description));
                        $('#myModal #pDetails').empty().html($description);

                        $('#myModal').modal();
                    }
                })
            }
        })
</script>
