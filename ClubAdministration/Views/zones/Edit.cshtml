@model ClubAdministration.Models.system.zones

@{ 
    ViewBag.Title = "ويرايش " + Model.title;
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ID)
    <div class="form-horizontal p-0 mb-2 shadow-sm">
        <h4 class="bg-light border text-center p-2 py-3 m-0 rounded-top">جزئیات حوزه كاربر</h4>
        <div class="container-fluid border rounded-bottom border-top-0 m-0">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group row">
                <div class="col font-weight-bold">
                    @Html.Label("عنوان", htmlAttributes: new { @class = "control-label col" })
                    @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col font-weight-bold">
                    @Html.Label("محدوده آي‌پي", htmlAttributes: new { @class = "control-label col" })
                    @Html.EditorFor(model => model.netmask, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4 font-weight-bold">
                    @Html.Label("ارتباط امن است", htmlAttributes: new { @class = "control-label col" })
                    @Html.CheckBoxFor(model => model.secured, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.secured, "", new { @class = "text-danger" })
                </div>
                <div class="col-4 font-weight-bold">
                    @Html.Label("كاربر استفاده كننده از نرم افزار موبايل", htmlAttributes: new { @class = "control-label col" })
                    @Html.CheckBoxFor(model => model.remote, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.remote, "", new { @class = "text-danger" })
                </div>
                <div class="col-4 font-weight-bold">
                    @Html.Label("ارتباط محلي است", htmlAttributes: new { @class = "control-label col" })
                    @Html.CheckBoxFor(model => model.local, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.local, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row border mx-1 rounded">
                <div class="col-sm-12 text-sm-center col-md-6 text-md-left p-0">
                    <input type="submit" value="  ذخيره  " class="btn btn-primary px-5 m-2" />
                </div>
                <div class="col-sm-12 text-sm-left text-md-right col-md-6 p-0">
                    @Html.ActionLink("بازگشت به ليست", "Index", null, new { @class = "btn btn-outline-warning px-5 m-2" })
                </div>
            </div>
        </div>
    </div>
}
