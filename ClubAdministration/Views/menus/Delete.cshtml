@model ClubAdministration.Models.system.menus

@{
    ViewBag.Title = "حذف" + " " + Model.title;
}

@widgets.common.ribbon.Show_Ribbon(Url, "menus.delete.default", "آيا از حذف" + (" " + Model.title) + " مطمئن هستيد؟", new { id = Model.ID })
@using (Html.BeginForm("Delete", "menus", FormMethod.Post, new { @name = "menusform" }))
{
    @Html.AntiForgeryToken()
    <div class="mt-2 rounded-bottom shadow-sm mb-4">
        <h3 class="text-center rounded-top p-3 border bg-light m-0">اطلاعات پايه</h3>
        <div class="rounded-bottom px-2 py-2 border border-top-0 ">
            <table class="table table-striped table-responsive-sm">
                <tr>
                    <td>
                        كد شناسايي
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.ID)
                    </td>
                </tr>
                <tr>
                    <td>
                        عنوان منو
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.title)
                    </td>
                </tr>
                <tr>
                    <td>
                        آدرس
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.url)
                    </td>
                </tr>
                <tr>
                    <td>
                        پيش فرض؟
                    </td>
                    <td>
                        @widgets.menu_default.Show_Menu_Default(Model.isDefault)
                    </td>
                </tr>
                <tr>
                    <td>
                        محل بارگيري
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.target)
                    </td>
                </tr>
                <tr>
                    <td>
                        نام منو
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.menuClass)
                    </td>
                </tr>
                <tr>
                    <td>
                        توضيحات منو
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.palceholder)
                    </td>
                </tr>
            </table>
        </div>
    </div>
}