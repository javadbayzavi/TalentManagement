@model ClubAdministration.Models.drill
@{
    ViewBag.Title = "حذف" + " " + Model.drill_title;
}

@widgets.common.ribbon.Show_Ribbon(Url, "drills.delete.default", "آيا از حذف" + (" " + Model.drill_title) + " مطمئن هستيد؟", rootParams: new { id = Model.ID })
@using (Html.BeginForm("DeleteDrill", "drills", FormMethod.Post, new { @name = "drillform" }))
{
    @Html.AntiForgeryToken()
    <div class="mt-2 rounded-bottom shadow-sm mb-4">
        <h3 class="text-center rounded-top p-3 border bg-light m-0">اطلاعات پايه</h3>
        <div class="rounded-bottom px-2 py-2 border border-top-0 ">
            <table class="table table-striped table-responsive-sm">
                <tr>
                    <td>
                        كد شناسايي
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.ID)
                    </td>
                </tr>
                <tr>
                    <td>
                        عنوان تمرين
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.drill_title)
                    </td>
                </tr>
                <tr>
                    <td>
                        اهداف تمرين
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.drill_goals)
                    </td>
                </tr>
                <tr>
                    <td>
                        نتيجه تمرين
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.drill_target)
                    </td>
                </tr>
                <tr>
                    <td>
                        روش اجرا
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.drill_execution)
                    </td>
                </tr>
                <tr>
                    <td>
                        تنوع اجرا
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.drill_variations)
                    </td>
                </tr>
                <tr>
                    <td>
                        توسعه تمرين
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.drill_progression)
                    </td>
                </tr>
                <tr>
                    <td>
                        نكات مربي‌گري
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.drill_coachingtips)
                    </td>
                </tr>
                <tr>
                    <td>
                        شرايط رقابتي‌سازي
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.drill_competition)
                    </td>
                </tr>
                <tr>
                    <td>
                        مدت زمان تمرين
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.drill_duration)
                    </td>
                </tr>
                <tr>
                    <td>
                        ابعاد زمين
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.drill_fieldsize)
                    </td>
                </tr>
                <tr>
                    <td>
                        سطح تمرين
                    </td>
                    <td>
                        @widgets.level_play.Show_Level_Play(Model.drill_levelplay)
                    </td>
                </tr>
                <tr>
                    <td>
                        سازماندهي تمرين
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.drill_organization)
                    </td>
                </tr>
                <tr>
                    <td>
                        تعداد بازيكنان
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.drill_playernumbers)
                    </td>
                </tr>
                <tr>
                    <td>
                        ساختار تمرين
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.drill_structure)
                    </td>
                </tr>
                <tr>
                    <td>
                        گروه سني
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.agelevel.level)
                    </td>
                </tr>
                <tr>
                    <td>
                        تجهيزات تمرين
                    </td>
                    <td>
                        @foreach (var item in Model.drillmaterials)
                        {
                            @Html.ActionLink(item.material.name + "(" + item.number + ")", "")
                        }
                    </td>
                </tr>
                <tr>
                    <td>
                        مهارت‌هاي تمرين
                    </td>
                    <td>
                        @foreach (var item in Model.drillskills)
                        {
                            @Html.Display(item.skill.name)
                        }
                    </td>
                </tr>
                <tr>
                    <td>
                        تاكيد تمرين
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.drill_emphasis)
                    </td>
                </tr>
                <tr>
                    <td>
                        شاخص‌هاي كيفي
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.drill_kpis)
                    </td>
                </tr>
                <tr>
                    <td>
                        عنوان تمرين
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.drill_location)
                    </td>
                </tr>
                <tr>
                    <td>
                        نوع تمرين
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.drill_type)
                    </td>
                </tr>
            </table>
        </div>
    </div>
}