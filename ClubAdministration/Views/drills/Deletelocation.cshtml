@model ClubAdministration.Models.drill_locations

@{
    ViewBag.Title = "حذف" + " " + Model.location;
}

@widgets.common.ribbon.Show_Ribbon(Url, "drills.locations.delete", "آيا از حذف" + (" " + Model.location) + " مطمئن هستيد؟", rootParams: new { id = Model.ID })
@using (Html.BeginForm("Deletelocation", "drills", FormMethod.Post, new { @name = "drillsform" }))
{
    @Html.AntiForgeryToken()
    <div class="mt-2 rounded-bottom shadow-sm mb-4">
        <h3 class="text-center rounded-top p-3 border bg-light m-0">اطلاعات پايه</h3>
        <div class="rounded-bottom px-2 py-2 border border-top-0 ">
            <table class="table table-striped table-responsive-sm">
                <tr>
                    <td>
                        كد شناسايي
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.ID)
                    </td>
                </tr>
                <tr>
                    <td>
                        مكان تمرين
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.location)
                    </td>
                </tr>
            </table>
        </div>
    </div>
}