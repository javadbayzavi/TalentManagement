@model ClubAdministration.Models.system.user_groups

@{
    ViewBag.Title = "حذف" + " " + Model.user.fullName;
}

@widgets.common.ribbon.Show_Ribbon(Url, "groups.users.delete", "آيا از حذف" + (" " + Model.user.fullName) + " مطمئن هستيد؟", new { id = Model.ID },new { id = Model.group.ID })
@using (Html.BeginForm("deleteUser", "groups", FormMethod.Post, new { @name = "groupsform" }))
{
    @Html.AntiForgeryToken()
    <div class="mt-2 rounded-bottom shadow-sm mb-4">
        <h3 class="text-center rounded-top p-3 border bg-light m-0">اطلاعات پايه</h3>
        <div class="rounded-bottom px-2 py-2 border border-top-0 ">
            <table class="table table-striped table-responsive-sm">
                <tr>
                    <td>
                        كد شناسايي
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.ID)
                    </td>
                </tr>
                <tr>
                    <td>
                        عنوان كاربر
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.user.fullName) (@Model.user.user_name)
                    </td>
                </tr>
            </table>
        </div>
    </div>
}