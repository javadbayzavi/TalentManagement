@model ClubAdministration.Models.player_sessions

@{
    ViewBag.Title = "جزئيات حضور در جلسه تمرين";
}

@widgets.common.ribbon.Show_Ribbon(Url, "sessions.participants.details", "جزئيات حضور در جلسه تمرین" + (" " + Model.session.training_terms.term_title),  new { id = Model.ID }, new { id = Model.session_id})

<div class="mt-2 rounded-bottom shadow-sm mb-4">
    <h3 class="text-center rounded-top p-3 border bg-light m-0">جزئیات حضور</h3>
    <div class="rounded-bottom px-2 py-2 border border-top-0 ">
        <table class="table table-striped table-responsive-sm">
            <tr>
                <td class="font-weight-bold">
                    كد شناسايي
                </td>
                <td>
                    @Html.DisplayFor(model => model.ID)
                </td>
            </tr>
            <tr>
                <td class="font-weight-bold">
                    نام و نام خانوادگي شركت كننده
                </td>
                <td>
                    @Html.ActionLink((Model.player.name + " " + Model.player.familiy), "Details", "players", new { id = Model.player_id }, null)
                </td>
            </tr>
            <tr>
                <td class="font-weight-bold">
                    عنوان كلاس آموزشي
                </td>
                <td>
                    @Html.ActionLink(Model.session.training_terms.term_title, "Details", "club", new { id = Model.session.trainingterms_id }, null)
                </td>
            </tr>
            <tr>
                <td class="font-weight-bold">
                    تاریخ جلسه تمرین
                </td>
                <td>
                    @Model.session.session_date
                </td>
            </tr>
            <tr>
                <td class="font-weight-bold">
                    ساعت ورود
                </td>
                <td>
                    @Html.DisplayFor(model => model.hour_in)
                </td>
            </tr>
            <tr>
                <td class="font-weight-bold">
                    ساعت خروج
                </td>
                <td>
                    @Html.DisplayFor(model => model.hour_out)
                </td>
            </tr>
        </table>
    </div>
</div>