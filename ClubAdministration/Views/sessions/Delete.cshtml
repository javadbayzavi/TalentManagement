@model ClubAdministration.Models.training_sessions

@{
    ViewBag.Title = "آیا از حذف جلسه تمرین" + " " + Model.training_terms.term_title + "اطمینان دارید؟";
}
@using (Html.BeginForm("", "", FormMethod.Post, new { @name = "sessionform", @id = "sessionform" }))
{
    @widgets.common.ribbon.Show_Ribbon(Url, "sessions.delete.default", "آیا از حذف جلسه تمرین" + " " + Model.training_terms.term_title + "اطمینان دارید؟", rootParams: new { id = Model.ID })
    @Html.AntiForgeryToken()

    <div class="mt-2 rounded-bottom shadow-sm mb-4">
        <h3 class="text-center rounded-top p-3 border bg-light m-0">جزئیات جلسه تمرین</h3>
        <div class="rounded-bottom px-2 py-2 border border-top-0 ">
            <table class="table table-striped table-responsive-sm">
                <tr>
                    <td>
                        كد شناسايي
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.ID)
                    </td>
                </tr>
                <tr>
                    <td>
                        عنوان كلاس آموزشي
                    </td>
                    <td>
                        @Html.ActionLink(Model.training_terms.term_title, "Details", "club", new { id = Model.trainingterms_id }, null)
                    </td>
                </tr>
                <tr>
                    <td>
                        تاریخ جلسه تمرین
                    </td>
                    <td>
                        @Model.session_date
                    </td>
                </tr>
                <tr>
                    <td>
                        زمان جلسه تمرین
                    </td>
                    <td>
                        @(Model.start_time + " تا " + @Model.end_time)
                    </td>
                </tr>
                <tr>
                    <td>
                        تعداد شرکت کنندگان
                    </td>
                    <td>
                        @Html.ActionLink(Model.participants.Count + " بازیکن", "Participants", new { id = Model.ID }, null)
                    </td>
                </tr>
                <tr>
                    <td>
                        کلاس جمع بندی شده؟
                    </td>
                    <td>
                        @widgets.session_closed.Show_Session_Closed(Model.session_closed.GetValueOrDefault())
                    </td>
                </tr>
            </table>
        </div>
    </div>
}