@model ClubAdministration.Models.payment_category

@{ 
    ViewBag.Title = "ایجاد دسته‌بندي تراكنش";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal p-0 mb-2 shadow-sm">
        <h4 class="bg-light border text-center p-2 py-3 m-0 rounded-top">جزئیات دسته‌بندي</h4>
        <div class="container-fluid border rounded-bottom border-top-0 m-0">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group row">
                <div class="col font-weight-bold">
                    @Html.Label("نام دسته", htmlAttributes: new { @class = "control-label col" })
                    @Html.EditorFor(model => model.category_title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.category_title, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col font-weight-bold">
                    @Html.Label("دسته‌بندي بالاسري", htmlAttributes: new { @class = "control-label col" })
                    @Html.DropDownList("parent_id",null, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.parent_id, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row border mx-1 rounded">
                <div class="col-sm-12 text-sm-center col-md-6 text-md-left p-0">
                    <input type="submit" value="  ايجاد  " class="btn btn-primary px-5 m-2" />
                </div>
                <div class="col-sm-12 text-sm-left text-md-right col-md-6 p-0">
                    @Html.ActionLink("بازگشت به ليست", "Categories", null, new { @class = "btn btn-outline-warning px-5 m-2" })
                </div>
            </div>
        </div>
    </div>
}
