@model ClubAdministration.Models.player_payouts
@{
    ViewBag.Title = "جزئيات سند مالي" + " " + Model.player.name + " " + Model.player.familiy;
}

@widgets.common.ribbon.Show_Ribbon(Url, "finance.playerpayments.details", "جزئیات پرداخت / دریافت" + (" " + Model.player.name + " " + Model.player.familiy), new { id = Model.ID }, new { id = Model.player_id })

<div class="mt-2 rounded-bottom shadow-sm mb-4">
    <h3 class="text-center rounded-top p-3 border bg-light m-0">جزئیات سند مالی</h3>
    <div class="rounded-bottom px-2 py-2 border border-top-0 ">
        <table class="table table-striped table-responsive-sm">
            <tr>
                <td>
                    كد شناسايي
                </td>
                <td>
                    @Html.DisplayFor(model => model.ID)
                </td>
            </tr>
            <tr>
                <td>
                    مبلغ سند
                </td>
                <td>
                    @Model.club_deposite.payment_fee
                </td>
            </tr>
            <tr>
                <td>
                    تاریخ سند
                </td>
                <td>
                    @Model.club_deposite.payment_date
                </td>
            </tr>
            <tr>
                <td>
                    وصول شده؟
                </td>
                <td>
                    @widgets.fee_status.Show_Fee_Status(Model.fee_status.GetValueOrDefault())
                </td>
            </tr>
            <tr>
                <td>
                    تاریخ وصول
                </td>
                <td>
                    @Model.billed_date
                </td>
            </tr>
            <tr>
                <td>
                    بابت
                </td>
                <td>
                    @Model.club_deposite.payment_category.category_title
                </td>
            </tr>
            <tr>
                <td>
                    روش پرداخت
                </td>
                <td>
                    @widgets.payment_method.Show_Payment_Method(Model.club_deposite.payment_method)
                </td>
            </tr>
            <tr>
                <td>
                    پرداخت/ دريافت
                </td>
                <td>
                    @widgets.payment_type.Show_Payment_Type(Model.club_deposite.payment_type)
                </td>
            </tr>
        </table>
    </div>
</div>
