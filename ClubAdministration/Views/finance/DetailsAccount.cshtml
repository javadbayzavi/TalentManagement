@model ClubAdministration.Models.club_bankaccounts

@widgets.common.ribbon.Show_Ribbon(Url, "finance.accounts.details", "جزئيات حساب بانکی" + (" " + Model.account_name), rootParams: new { id = Model.ID })

<div class="mt-2 rounded-bottom shadow-sm mb-4">
    <h3 class="text-center rounded-top p-3 border bg-light m-0">اطلاعات پايه</h3>
    <div class="rounded-bottom px-2 py-2 border border-top-0 ">
        <table class="table table-striped table-responsive-sm">
            <tr>
                <td>
                    كد شناسايي
                </td>
                <td>
                    @Html.DisplayFor(model => model.ID)
                </td>
            </tr>
            <tr>
                <td>
                    عنوان حساب مالی
                </td>
                <td>
                    @Html.DisplayFor(model => model.account_name)
                </td>
            </tr>
            <tr>
                <td>
                    صاحب حساب
                </td>
                <td>
                    @Html.DisplayFor(model => model.account_issuer)
                </td>
            </tr>
            <tr>
                <td>
                    نوع حساب مالی
                </td>
                <td>
                    @widgets.payment_method.Show_Payment_Method(Model.payment_method)
                </td>
            </tr>
        </table>
    </div>
</div>
